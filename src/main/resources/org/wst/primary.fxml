<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<GridPane fx:id="gridPane" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.wst.PrimaryController"
          hgap="10"
          vgap="10"
          gridLinesVisible="false">

    <children>

        <Label GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.columnSpan="4" text="Main Window"/>

        <VBox fx:id="colWithListView" styleClass="Vbox" GridPane.rowIndex="1" GridPane.columnIndex="0">

            <Button fx:id="selectRootButton" text="Select directory >" onAction="#selectRoot"/>
            <Label fx:id="rootDirectory" text="No root selected" textOverrun="LEADING_ELLIPSIS"/>
            <!-- ListView added here -->

        </VBox>

        <VBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER">
            <Region prefHeight="35"/>
            <Button fx:id="selectFile" text=">" onAction="#selectFileFromList"
            />
        </VBox>

        <VBox fx:id="centerColumn" styleClass="Vbox" GridPane.rowIndex="1" GridPane.columnIndex="2"
              GridPane.valignment="CENTER">

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="selectSingleFileButton" text="Select" onAction="#selectSingleFile"/>
                <Button fx:id="createFileButton" text="Create" onAction="#createFile"/>
            </HBox>
            <Label fx:id="selectedFile" text="No file selected"/>

        </VBox>

        <Button fx:id="insertButton" text="/\" onAction="#insertIntoFile" GridPane.rowIndex="2"
                GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM"/>

        <VBox fx:id="colWithSecondListView" styleClass="Vbox" GridPane.rowIndex="1" GridPane.columnIndex="3">

            <Label fx:id="secondList"
                   text="WIP: second list &#xD; with bib entries"/>

        </VBox>

        <TextArea fx:id="inputArea" prefHeight="300" text="From clipboard:" GridPane.rowIndex="3"
                  GridPane.columnSpan="4"/>

    </children>

    <columnConstraints>
        <ColumnConstraints percentWidth="30.0"/>
        <ColumnConstraints percentWidth="5.0"/>
        <ColumnConstraints percentWidth="35.0"/>
        <ColumnConstraints percentWidth="35.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="2"/>
        <RowConstraints percentHeight="40"/>
        <RowConstraints percentHeight="0"/>
        <RowConstraints percentHeight="54"/>
    </rowConstraints>

    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="5.0"/>
    </padding>
</GridPane>


